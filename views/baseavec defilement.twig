<!DOCTYPE HTML>
<html lang="fr">
  <head>
    <meta charset="{{site.charset}}">
    <title>
      {% block title %}
        {{ site.name }} - {{site.description}}
      {% endblock %}
    </title>
    <meta name="description" content="{{site.description}}">
    <meta name="viewport" content="width=device-width, initial-scale=1,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!--[if IE 9]>
        <script src="{{site.theme.link}}/js/html5.js" type="text/javascript"></script>
        <![endif]-->

    {% block istexsearchcss %}
    {% endblock %}

    <link rel="stylesheet" type="text/css" href="{{ site.theme.link }}/css/istex.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">
    {{ wp_head }}
  </head>
  <body>
    <header role="banner">
      {% block navigation %}

			<nav id="site-navigation" class="main-navigation"  role="navigation" aria-label="menu-principal">
          <input type="checkbox" id="toggle-nav" aria-label="open/close navigation">
          <label for="toggle-nav" class="nav-button maj">
            <svg fill="#cad733" height="48" viewBox="0 0 24 24" width="48" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
            </svg>
          </label>
          <ul class="primary-menu">
            {% for item in principal.get_items %}
              <li class="menu-item"><a class="maj {{item.class}}" href="{{item.link}}">{{item.title}}</a>
            {% endfor %}
          </ul>
      </nav>

      {% endblock %}
      {% block titre %}
        <p class="banner">
          {% if is_home %}
          {% else %}
            <a href="{{site.url}}"><img src="{{ site.theme.link }}/images/istex_logo.svg" alt="ISTEX - Initiative d'excellence en information scientifique et technique" width="60" height="60"></a>
          {% endif %}
        </p>
      {% endblock %}
      <div class="actus">
        <!--<img src="images/cloche.png" alt="cloche">-->
      </div>
    </header>
    {% block contenu %}
    {% endblock %}
 <footer role="contentinfo" >
      <div class="anr"><img src="{{ site.theme.link }}/images/footer/investissement_avenir.png" width="70" height="70" alt="investissement d'avenir"><p>Financement : ANR-10-IDEX-0004-02</p></div>
      <ul id="menu-liens-sociaux">
        {% for item in social.get_items %}
          <li class="menu-item {{item.classes | join(' ')}}"><a href="{{item.link}}">{{item.title}}</a></li>
        {% endfor %}
      </ul>
      <ul class="menu-pied">
        {% for item in footer.get_items %}
          <li class="menu-item {{item.classes | join(' ')}}"><a href="{{item.link}}">{{item.title}}</a></li>
        {% endfor %}
      </ul>
      <ul id="menu-partenaires" class="page">
          <li><a href="http://www.enseignementsup-recherche.gouv.fr/"><img src="{{ site.theme.link }}/images/footer/MESRI_logo.jpg" alt="ministère de l'enseignment supérieur et de la recherche"></a></li>
          <li><a href="http://www.cnrs.fr/"><img src="{{ site.theme.link }}/images/footer/logo-cnrs-simple.svg" width="60" height="60" alt="cnrs"></a></li>
          <li><a href="http://www.abes.fr/"><img src="{{ site.theme.link }}/images/footer/ABES-logo.png" alt="abes, agence bibliographique de l'enseignement supérieur"  width="85" height="55"></a></li>
          <li><a href="http://www.couperin.org/"><img src="{{ site.theme.link }}/images/footer/couperin.png" alt="couperin.org"  width="124" height="40"></a></li>
          <li><a href="http://www.cpu.fr/"><img src="{{ site.theme.link }}/images/footer/CPU-Logo.png" alt="CPU conférence de sprésidents d'université" width="104" height="48"></a></li>

      </ul>
    </footer>
    {{ wp_footer }}
    <script>
    jQuery(document).ready(function($) {
      $('.Count').each(function () {
          var $this = $(this);
          jQuery({ Counter: 0 }).animate({ Counter: $this.text() }, {
            duration: 1000,
            easing: 'swing',
            step: function (i) {
              $this.text(Math.ceil(i));
            }
          });
      });
    });
    </script>
    <!-- script widget istex-->
    <script>
    function getParameterByName(name, url) {
      if (!url) url = window.location.href;
      name = name.replace(/[\[\]]/g, "\\$&");
      var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
          results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, " "));
    }
    var istexConfig = {
      istexApi: 'https://api.istex.fr',
      query: getParameterByName('q') ? getParameterByName('q') : false,
      advancedToLoad: false,
      labels:{
        search: {
          'placeholder': {
                'main':"Testez ISTEX : indiquez un titre, des mots-clés ou un DOI"
              }
        }
      },
      defaultSort: ''
    };
    </script>
    <script src="//widgets.istex.fr/bower_components/angular/angular.min.js"></script>
    <script src="//widgets.istex.fr/slider/rzslider.js"></script>
    <script src="//widgets.istex.fr/app.min.js"></script>
  </body>
</html>

<!DOCTYPE HTML>
<html lang="fr">
  <head>
    <meta charset="{{site.charset}}">
    <title>
      {% block title %}
        {{ site.name }}
      {% endblock %}
    </title>
    <meta name="description" content="{{site.description}}">
    <meta name="viewport" content="width=device-width, initial-scale=1,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!--[if IE 9]>
        <script src="{{site.theme.link}}/js/html5.js" type="text/javascript"></script>
        <![endif]-->

    {% block istexsearchcss %}
    {% endblock %}

    <link rel="stylesheet" type="text/css" href="{{ site.theme.link }}/css/istex.css">
    {{wp_head}}
  </head>
  <body>
    <header role="banner">
      {% block navigation %}
			<nav id="site-navigation" class="main-navigation"  role="navigation" aria-label="menu-principal">
          <input type="checkbox" id="toggle-nav" aria-label="open/close navigation">
          <label for="toggle-nav" class="nav-button"><img src="images/burger.png" alt="menu"></label>
            <ul class="primary-menu">
              <li class="menu-item menu-object-category"><a href="#">Chercheurs</a>
                <ul class="sub-menu">
                  <li class="menu-item"><a href="#">Accueil</a></li>
                  <li class="menu-item"><a href="#">Votre discipline dans ISTEX</a></li>
                  <li class="menu-item"><a href="#">Les services ISTEX</a></li>
                  <li class="menu-item"><a href="#">Cas d usage ISTEX</a></li>
                  <li class="menu-item"><a href="#">Actualités</a></li>
                  <li class="menu-item"><a href="#">Historique ISTEX</a></li>
                </ul>
              </li>
              {% for item in menu.items %}
                <li class="menu-item {{ item.classes|join(' ') }}">
                    <a class="menu-item-link" href="{{ item.link }}">{{ item.title }}</a>
                    {% if item.children %}
                        <ul class="sub-menu">
                            {% for child in item.children %}
                                <li class="nav-drop-item">
                                    <a href="{{ child.link }}">{{ child.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
              {% endfor %}
            </ul>
      </nav>
      {% endblock %}
      {% block titre %}
        {% if is_home %}
          <h1><abbr title="initiative d'excellence en Information scientifique et technique">ISTEX</abbr></h1>
        {% elseif is_home_profil %}
          <h1><a href="{{site.url}}"><abbr title="initiative d'excellence en Information scientifique et technique">ISTEX</abbr></a></h1>
        {% else %}
          <p class="h1"><a href="{{site.url}}"><abbr title="initiative d'excellence en Information scientifique et technique">ISTEX</abbr></a></p>
        {% endif %}
      {% endblock %}
      <div class="actus">
        <!--<img src="images/cloche.png" alt="cloche">-->
      </div>
    </header>
    {% block contenu %}
    {% endblock %}
    <footer role="contentinfo">
      <ul id="menu-liens-sociaux">
        {% for item in social.get_items %}
          <li class="menu-item {{item.classes | join(' ')}}"><a href="{{item.link}}">{{item.title}}</a></li>
        {% endfor %}
      </ul>
      <ul id="menu-pied">
        {% for item in footer.get_items %}
          <li class="menu-item {{item.classes | join(' ')}}"><a href="{{item.link}}">{{item.title}}</a></li>
        {% endfor %}
      </ul>
      </footer>
    {{wp_footer}}

    <!-- script widget istex-->
    <script>
    function getParameterByName(name, url) {
      if (!url) url = window.location.href;
      name = name.replace(/[\[\]]/g, "\\$&");
      var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
          results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, " "));
    }
    var istexConfig = {
      istexApi: 'https://api.istex.fr',
      query: getParameterByName('q') ? getParameterByName('q') : false,
      advancedToLoad: false,
      labels:{
        search: {
          'placeholder': {
                'main':"Titre, mots-clés ou DOI"
              }
        }
      },
      defaultSort: ''
    };
    </script>
    <script src="//widgets.istex.fr/bower_components/angular/angular.min.js"></script>
    <script src="//widgets.istex.fr/app.min.js"></script>
  </body>
</html>
